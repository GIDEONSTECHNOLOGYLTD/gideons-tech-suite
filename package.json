{
  "name": "gideons-tech-suite-root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prestart": "cd frontend && npm install && NODE_OPTIONS=--max_old_space_size=4096 npm run build",
    "start": "cd backend && node server.js",
    "dev": "cd backend && NODE_ENV=development nodemon server.js",
    "postinstall": "cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm install && NODE_OPTIONS=--max_old_space_size=4096 npm run build && cd ../backend && npm install",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "admin:create": "node scripts/createAdmin.js",
    "env:setup": "node scripts/setupEnv.js",
    "env:validate": "node -e 'require(\"./backend/config/env-validator\")'"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "colors": "^1.4.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "html-to-text": "^9.0.5",
    "mongoose": "^8.15.0",
    "nodemailer": "^7.0.3",
    "pug": "^3.0.3",
    "readline-sync": "^1.4.10"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
