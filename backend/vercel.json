{
  "version": 2,
  "name": "gideons-tech-suite-api",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/ws", "dest": "/server.js" },
    { "src": "/api/v1/(.*)", "dest": "/server.js" },
    { "src": "/api/(.*)", "dest": "/server.js" },
    { "src": "/(.*)", "dest": "/server.js" }
  ],
  "env": {
    "NODE_ENV": "production",
    "FRONTEND_URL": "https://gideons-tech-suite.vercel.app"
  }
}
