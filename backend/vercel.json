{
  "version": 2,
  "name": "gideons-tech-suite-api",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/api/index.js" }
  ],
  "env": {
    "NODE_ENV": "production",
    "FRONTEND_URL": "https://gideons-tech-suite.vercel.app"
  }
}
