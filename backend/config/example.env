# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection - Replace with your actual credentials
MONGODB_URI=your_mongodb_connection_string_here

# JWT - Generate a strong secret
JWT_SECRET=your_secure_jwt_secret_key_here_should_be_long_and_secure
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# File Upload
MAX_FILE_UPLOAD=5242880 # 5MB in bytes

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000

# CORS Whitelist - Add your production domains
CORS_WHITELIST=http://localhost:3000,https://your-production-domain.com
